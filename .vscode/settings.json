{
  "editor.fontFamily": " Fira Code,JetBrains Mono, Consolas, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.fontWeight": "300", // Use 200 or 100 for even lighter if installed
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": ["comment", "comment.line", "comment.block.documentation"],
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  },
  "errorLens.fontWeight": "300"
}
